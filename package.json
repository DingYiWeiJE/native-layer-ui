{
  "name": "native-layer-ui",
  "version": "1.0.0",
  "description": "A unified Layer System for React Native - manage modals, drawers, sidebars, toasts, and message boxes with ease",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "prepare": "yarn build"
  },
  "keywords": [
    "react-native",
    "modal",
    "drawer",
    "sidebar",
    "toast",
    "messagebox",
    "overlay",
    "layer",
    "ui",
    "gesture",
    "animation",
    "imperative",
    "ui-kit",
    "overlay-kit",
    "react-native-ui"
  ],
  "author": "DingYiWei",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.72.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "github:DingYiWeiJE/native-layer-ui"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
